@model TESHApp.Models.Alumno

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<h4>Alumno</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreAlumno" class="control-label"></label>
                <input asp-for="NombreAlumno" type="text" pattern="[a-zA-Z]*" class="form-control" />
                <span asp-validation-for="NombreAlumno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApellidoAlumno" class="control-label"></label>
                <input asp-for="ApellidoAlumno" type="text" class="form-control" />
                <span asp-validation-for="ApellidoAlumno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Matricula" class="control-label"></label>
                <input asp-for="Matricula" maxlength="8" class="form-control" />
                <span asp-validation-for="Matricula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Carrera" class="control-label"></label>
                <select asp-for="Carrera" class="form-control">
                    <option>ISC</option>
                    <option>IM</option>
                    <option>IC</option>
                </select>
                @*<input asp-for="Carrera" class="form-control" />*@
                <span asp-validation-for="Carrera" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Semestre" class="control-label"></label>
                <input asp-for="Semestre" maxlength="1" class="form-control" />
                <span asp-validation-for="Semestre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Calificacion" class="control-label"></label>
                <input asp-for="Calificacion" maxlength="1" class="form-control" />
                <span asp-validation-for="Calificacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
